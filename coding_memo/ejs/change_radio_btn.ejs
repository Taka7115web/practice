<!-- ■ラジオボタンのデザインを変更 -->


<li>
  <input type="radio" name="q1" id="q" value="" class="">
  <label for="q">
    よくある
  </label>
</li>


    & input {
      display: none;
    }

    & input[type=radio]:checked+label::after {
      opacity: 1;
    }

    & label {
      display: block;
      cursor: pointer;
      font-size: 17px;
      position: relative;

      &::before {
        display: block;
        width: 20px;
        height: 20px;
        background: #fff;
        border:3px solid #000;
        border-radius: 4px;
        position: absolute;
        content: '';
        bottom: -100px;
        left: 50%;
        transform: translateX( -50%);
      }

      &::after {
        opacity: 0;
        display: block;
        width: 8px;
        height: 20px;
        border-right: 3px solid #000;
        border-bottom: 3px solid #000;
        position: absolute;
        content: '';
        bottom: -105px;
        left: 50%;
        transform: translateX( -50%);
      }
    }